# ---------------------------------
# Service Identity
# ---------------------------------
spring.application.name=driver-service
server.port=8081

# ---------------------------------
# MySQL Configuration
# ---------------------------------
spring.datasource.url=jdbc:mysql://localhost:3306/ride_tracker?allowPublicKeyRetrieval=true&useSSL=false
spring.datasource.username=root
spring.datasource.password=root@123
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true

# ---------------------------------
# Kafka Configuration
# ---------------------------------
spring.kafka.bootstrap-servers=kafka:9092
spring.kafka.producer.key-serializer=org.apache.kafka.common.serialization.StringSerializer
spring.kafka.producer.value-serializer=org.apache.kafka.common.serialization.StringSerializer

# ---------------------------------
# Feign Configuration
# ---------------------------------
# Timeouts & Logging
feign.client.config.default.connectTimeout=5000
feign.client.config.default.readTimeout=5000
feign.client.config.default.loggerLevel=full

# Ride service URL (used by Feign)
ride-service.url=http://localhost:8082

# ---------------------------------
# Spring Cloud Compatibility Fix (Required for Spring Boot 3.5.x)
# ---------------------------------
spring.cloud.compatibility-verifier.enabled=false

# Keystore (Driver Service certificate)
server.ssl.enabled=true
server.ssl.key-store=classpath:certificates/driver-service.jks
server.ssl.key-store-password=changeit
server.ssl.key-store-type=JKS
server.ssl.key-alias=driver-service

# Truststore to validate clients (Ride Service or others)
server.ssl.trust-store=classpath:certificates/driver-service-truststore.jks
server.ssl.trust-store-password=changeit
server.ssl.trust-store-type=JKS

# Require client authentication
#server.ssl.client-auth=need
