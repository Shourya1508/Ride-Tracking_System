package com.example.rule.Service;
import lombok.RequiredArgsConstructor;
import lombok.extern.slf4j.Slf4j;
import org.springframework.kafka.annotation.KafkaListener;
import org.springframework.kafka.support.Acknowledgment;
import org.springframework.messaging.handler.annotation.Payload;
import org.springframework.stereotype.Service;

import com.example.event.model.UserEvent;
import com.rabbitmq.client.AMQP.Basic.Ack;

import org.springframework.amqp.rabbit.core.RabbitTemplate;

@Service
@Slf4j
@RequiredArgsConstructor
public class KafkaConsumerService {

    private final RabbitTemplate rabbitTemplate;

    @KafkaListener(topics = "user-events", groupId = "rule-engine-group")
    public void consume(@Payload UserEvent event) {
        log.info("Received from Kafka: {}", event);

        if ("LOGIN".equalsIgnoreCase(event.getAction())) {
            rabbitTemplate.convertAndSend("email-queue", event);
            log.info("Forwarded to RabbitMQ");
        }

//        ack.acknowledge(); // commit offset
    }
}

